{
    "name": "gemini-explain",
    "displayName": "gemini-explain",
    "description": "This is my first vscode extension",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.107.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:geminiExplain.explainSelection"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "geminiExplain.explainSelection",
                "title": "Gemini: Explain Selected Code"
            },
            {
                "command": "gemini-explain.helloWorld",
                "title": "Hello World"
            }
        ],
        "configuration": {
            "title": "Gemini",
            "properties": {
                "gemini.apiKey": {
                    "type": "string",
                    "default": "",
                    "description": "Gemini API key used to call Google Gemini API"
                },
                "gemini.model": {
                    "type": "string",
                    "default": "gemini-1.5-flash",
                    "description": "Gemini model name"
                }
            }
        },
        "menus": {
            "editor/context": [
                {
                    "command": "geminiExplain.explainSelection",
                    "when": "editorHasSelection",
                    "group": "navigation"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/vscode": "^1.107.0",
        "@types/mocha": "^10.0.10",
        "@types/node": "22.x",
        "typescript-eslint": "^8.48.1",
        "eslint": "^9.39.1",
        "typescript": "^5.9.3",
        "@vscode/test-cli": "^0.0.12",
        "@vscode/test-electron": "^2.5.2"
    }
}
